# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
max_line_length = 80
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

[*.mdx]
insert_final_newline = false
trim_trailing_whitespace = false